<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
		<title>BobCat</title>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
		<link href="https://library.nyu.edu/css/common/bobcat.css" media="screen" rel="stylesheet" type="text/css" />
    <!-- <link href="http://fonts.googleapis.com/css?family=Muli" rel="stylesheet" type="text/css" /> -->
		<script src="https://library.nyu.edu/scripts/jquery/plugins/jquery.nyulibrary.feedback.js" type="text/javascript"></script>
		<script src="https://library.nyu.edu/scripts/jquery/plugins/jquery.nyulibrary.libraryhelp.js" type="text/javascript"></script>
		<script src="https://library.nyu.edu/scripts/jquery/plugins/jquery.poshytip.min.js" type="text/javascript"></script>
		<script src="https://library.nyu.edu/scripts/jquery/plugins/jquery.nyulibrary.popuptip.js" type="text/javascript"></script>
		<!-- open search auto-discovery -->
		<script type="text/javascript">
			//After the DOM is ready, process the various elements
			jQuery(document).ready(function() {
				//Feedback links
				jQuery("div#static_feedback").nyulibrary_feedback("init");
				//Handle default text in search boxes
				jQuery(".defaultText").live("focus", function(event) {
					if (jQuery(this).val() == jQuery(this).attr("title")) {
						jQuery(this).removeClass("defaultTextActive");
						jQuery(this).val("");
					}
				});
				jQuery(".defaultText").live("blur", function(event) {
					if (jQuery(this).val() == "") {
						jQuery(this).addClass("defaultTextActive");
						jQuery(this).val(jQuery(this).attr("title"));
					}
				});
				//Handle search for default text
				jQuery("form").live("submit", function(event){ if (jQuery(this).find(".defaultText").length == 1 && jQuery(this).find(".defaultText").val() == jQuery(this).find(".defaultText").attr("title")) event.preventDefault();});
				//Initialize default text
				jQuery(".defaultText").blur();
				jQuery(".toggle_options").live("click", function(event) {event.preventDefault(); jQuery(".toggle_options").toggle(); jQuery("#search_advanced").toggle();});
				jQuery("#core_submit").append(jQuery('<a style="display: none;" class="toggle_options less_options" href="#">Fewer search options</a>'));
				jQuery("#core_submit").append(jQuery('<a style="display: none;" class="toggle_options more_options" href="#">More search options</a>'));
				jQuery(".less_options").show();
				//jQuery(".toggle_options").addClass("floatRight");
				//Ask a librarian chat widget plugin
				jQuery("#aal").nyulibrary_libraryhelp("init");
				jQuery(".nyulibrary_help").nyulibrary_popup_tip("init");
				jQuery(".tip-delayed").nyulibrary_popup_tip("init");
				jQuery(".tip").nyulibrary_popup_tip("init", {'floatIt': true });
			});
		</script>
	</head>
	<body>
		<div id="content">
			<a href="http://library.nyu.edu/" id="hd_link_to_home"></a>
			<div id="header"><span>GetIt @ NYU Libraries</span> <div id="bobcat_logo"><span>BobCat</span></div></div>
			<div id="nav1">
				<ul class="floatLeft">
					<%
					unless params["controller"] == "export_email"
						breadcrumbs = "<li>"+ link_to('NYU Libraries', 'http://library.nyu.edu')+ " &gt;</li>"
						breadcrumbs += "<li> "+ link_to('BobCat', 'http://bobcat.library.nyu.edu/nyu')+ " &gt;</li>"
						if params["action"] == "journal_list"
							breadcrumbs += "<li> "+ link_to('E-Jounals', :controller=>'search')+ " &gt;</li>"
							breadcrumbs += "<li> Results</li>"
						elsif params["action"] == "journal_search"
							breadcrumbs += "<li> "+ link_to('E-Journals', :controller=>'search')+ " &gt;</li>"
							breadcrumbs += "<li> Results</li>"
						else
							breadcrumbs += "<li> E-Journals A-Z</li>"
						end
					end
					%>
					<%= breadcrumbs.html_safe %>
				</ul>
				<ul class="floatRight">
					<li>
						<% if current_user %>
							<%= link_to "Log-out #{current_user.firstname}", logout_url, :class=>"nyulibrary_icons_logout" %> 
						<% else %> 
						<%= link_to "Login", login_url({"umlaut.institution" => current_primary_institution.name}), :class=>"nyulibrary_icons_login" %> 
						<% end %>
					</li>
				</ul>
			</div>
			<div id="maincontent">
				<div id="sidebar" class="sidebar">
					<div id="account" class="box">
						<h2><a href="http://library.nyu.edu/info/myworkspace.html" class="nyulibrary_icons_help nyulibrary_help" style="text-decoration:none;">&nbsp;</a>My Workspace</h2>
						<ul>
							<% if current_user %>
								<li><a href="https://webdev1.library.nyu.edu/eshelf">My e-shelf</a></li>
								<li><a href="https://webdev1.library.nyu.edu/eshelf/account">My library account</a></li>
								<li><%= link_to "Log-out #{current_user.firstname}", logout_url, :class=>"logout" %></li>
							<% else %>
								<li><a href="https://webdev1.library.nyu.edu/eshelf">Guest e-shelf (log in for more options)</a></li>
							<% end %>
						</ul>
					</div>
					<div id="help" class="box">
						<h2>Need help?</h2>
						<ul>
							<li><a href="http://library.nyu.edu/help/ejournals.html" target="_blank">Help using the E-Journals A-Z tab</a></li>
							<li><a href="http://library.nyu.edu/research/tutorials/" target="_blank">Tutorials and self help</a></li>
							<li><a href="http://library.nyu.edu/ask" target="_blank" id="aal">Ask a Librarian</a></li>
						</ul>
					</div>
					<div id="additional_options" class="box">
						<h2>Additional Options</h2>
						<ul>
							<li><a href="http://webdev1.library.nyu.edu/arch">Find articles on your topic</a></li>
						</ul>
					</div>
				</div>
				<div id="container">
					<%= yield %>
				</div>
			</div>
		</div>
		<script type="text/javascript" src="https://libraryh3lp.com/js/libraryh3lp.js?multi"></script>
	</body>
</html>
