<% service_response = holding.service_response %>
<% if current_user %>
  <%- # Link for "Request" action with class "ajax_window" for unobtrusive JS. -%>
  <%= link_to(t('resolve.holdings.request_text'), new_holding_request_url(service_response),
    target: "_blank", class: "btn btn-primary request-link ajax_window") %>
<% else %>
  <%- # Link to login screen -%>
  <strong>
    <%= link_to(t('resolve.holdings.login_text'),
      login_url({origin: url_for_request(service_response.request)}),
      class: "request-login-link") %>
  </strong>
<% end %>
