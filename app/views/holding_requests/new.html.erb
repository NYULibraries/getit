<% cite = @user_request.referent.to_citation %>
<div class="request">
  <h2><%= request_header(cite[:title]) %></h2>
  <div class="text-error">
    <%= flash[:alert] %>
  </div>
  <p>You may:</p>
  <ol class="request_options">
    <%= render "new_available", sub_library_code: @holding.sub_library_code if @authorizer.available? %>
    <%= render "new_recall", holding: @holding if @authorizer.recallable? %>
    <%= render "new_offsite" if @authorizer.offsite? %>
    <%= render "new_in_processing" if @authorizer.in_processing? %>
    <%= render "new_on_order" if @authorizer.on_order? %>
    <%= render "new_ill" if @authorizer.ill? %>
  </ol>
  <p style="margin-top: 1em;"><strong>You will be notified by email when your item is ready or en route.</strong></p>
  <%= link_to_delivery_help %>
</div>
