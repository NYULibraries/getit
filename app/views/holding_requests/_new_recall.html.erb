<%= request_form("recall") do %>
  <%= request_option do %>
    <% if status.match(/Requested/) %>
      This material has been requested by a fellow library user.
      <%= request_link_or_text(
        "You may also place a request to be added to the queue.", 
          "recall") %>
    <% else %>
      <%= request_link_or_text(
        "Recall this item from a fellow library user.", 
          "recall") %>
      The item will be available within
      <%= ["BAFC"].include?(sub_library_code) ? "1 week" : "2 weeks" %>.<br />
    <% end %>
    <%= pickup_locations_fields %>
    <%= delivery_times %>
  <% end %>
  <%= submit_tag 'Submit' if pickup_locations.length > 1 %>
<% end %>