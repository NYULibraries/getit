<%- # The 'recall' request option -%>
<%= request_form(:recall) do %>
  <%= request_option(:recall) do %>
    <% if holding.requested? %>
      <%= request_link_or_text(t('holding_requests.new.recall.requested'), :recall) %>
      Please expect a wait of more than <%= holding.recall_period %>.<br />
    <% else %>
      <%= request_link_or_text(t('holding_requests.new.recall.default'), :recall) %>
      The item should be available within <%= holding.recall_period %>.<br />
    <% end %>
    <%= pickup_locations_field_set %>
    <%= delivery_times %>
  <% end %>
  <%= submit_tag 'Submit', { class: 'btn btn-primary' } if pickup_locations.size > 1 %>
<% end %>
