<%= display_request_form("offsite") do %>
<%= # Whole item
display_request_option {
  radio_button_tag("entire",  "yes", :checked => true) +
    content_tag(:p, "Request this item to be delivered to an NYU Library of your choice.") +
      display_pickup_locations + display_delivery_times_link
} %><br />
<%= # Scan portion
display_request_option {
  radio_button_tag("entire",  "no") + 
    content_tag(:p) {
      "Request this entire item.
      It will be held for you at the circulation desk of the specified pickup location.
      Items are ready for pickup within 2 business days.
      (Requests must be within <a href=\"http://library.nyu.edu/copyright/#fairuse\" target=\"_blank\">fair use guidelines</a>.)".html_safe +
      display_scan_elements
    }
} %>
<%= submit_tag 'Submit' %>
<% end %>