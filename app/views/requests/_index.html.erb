<% 	unless @user_request.nil?
	cite = @user_request.referent.to_citation %>
<div class="inner_modal_dialog">
	<h2><%= display_header(h(cite[:title])).html_safe %></h2>
  	<div class="formError">
    	<%= @error || flash[:error] %>
  	</div>
	<p>You may:</p>
	<ol id="request_options">
		<%= render :partial=>"request_available" if request_available? %>
		<%= render :partial=>"request_recall" if request_recall? %>
		<%= render :partial=>"request_offsite" if request_offsite? %>
		<%= render :partial=>"request_in_processing" if request_in_processing? %>
		<%= render :partial=>"request_on_order" if request_on_order? %>
		<%= render :partial=>"request_ill" if request_ill? %>
	</ol>
	<p style="margin-top: 1em;"><strong>You will be notified by email when your item is ready or en route.</strong></p>
	<%= display_delivery_help_link %>
</div>
<%	end %>
